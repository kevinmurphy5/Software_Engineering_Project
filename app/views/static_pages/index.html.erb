<html>
    <head>
        <title>Bootstrap Example</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <style>
            /* Remove the navbar's default rounded borders and increase the bottom margin */ 
            .navbar {
            margin-bottom: 50px;
            border-radius: 0;
            }
            
            /* Remove the jumbotron's default bottom margin */ 
            .jumbotron {
            margin-bottom: 0;
            }
        
            /* Add a gray background color and some padding to the footer */
            footer {
            background-color: #f2f2f2;
            padding: 25px;
            }
        </style>
    </head>
    <body>
        <br>
        <%= button_to "Create New Auction", new_auction_path, :class => "btn btn-dark", :method => "get" %>
        <br>


        <% if auctions.length == 0 %>
        
        <h2>There are no auctions!</h2>

        <% else %>
        <table class="table">
            <tr>
                <th>Item ID</th>
                <th>Item Name</th>
                <th>Item Description</th>
                <th>Start Price</th>
                <th>Win Price</th>
                <th>Auction Open</th>
                <th>Details</th>
            </tr>

            <% auctions.each do |a| %>

            <tr>
                <td><%= a.id %><br>
                <td><%= a.item_name %>
                <td><%= a.item_description %>
                <td><%= a.start_price %>
                <td><%= a.win_price == 0 ? "Not closed" : a.win_price %>
                <td><%= a.auction_open_status ? "Yes" : "No" %>
                <td><%= link_to "ðŸ”Ž", auction_path(a)%></td>
            </tr>

            <% end %>

        </table>
        <% end %>
    </body>
</html>